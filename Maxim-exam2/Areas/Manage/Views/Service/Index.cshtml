
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Service>
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        
                    <tbody>
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.ImageUrl</td>
                            <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Service" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            <td><a class="btn btn-succes" asp-area="Manage" asp-controller="Service" asp-action="Update" asp-route-id="@item.Id">Update</a></td>

                            <td><label class="badge badge-danger">Pending</label></td>
                        </tr>
                      
                    </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

